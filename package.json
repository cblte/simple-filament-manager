{
  "name": "simple-fm",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "css": "bunx @tailwindcss/cli -i ./src/styles/global.css -o ./public/output.css --minify",
    "migrate": "bunx drizzle-kit migrate",
    "build": "bun run css && bunx drizzle-kit generate && bun build src/index.ts --target=bun --outdir=dist && cp -r public dist/public",
    "start": "bun run migrate && bun run dist/index.js"
  },
  "dependencies": {
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.8",
    "pg": "^8.15.6"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "@types/bun": "latest",
    "@types/pg": "^8.11.14",
    "drizzle-kit": "^0.31.1",
    "tailwindcss": "^4.1.5"
  }
}